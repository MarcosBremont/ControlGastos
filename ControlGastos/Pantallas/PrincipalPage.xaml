<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:customcontrol="clr-namespace:ControlGastos.CustomControls"
             x:Class="ControlGastos.Pantallas.PrincipalPage"
             Title="Inicio"
             IconImageSource="gasto512">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ScrollView Grid.Row="1">
                    <StackLayout Orientation="Vertical" Padding="30,24,30,0" Spacing="10">
                        <Label Text="Por favor describa los gastos que ha tenido en el mes actual" TextColor="White" FontSize="16" Padding="0,0,0,0"/>

                        <Frame BackgroundColor="#171717" Padding="0" CornerRadius="8">

                            <Picker IsEnabled="True" Margin="5" FontSize="17" HorizontalOptions="FillAndExpand" SelectedIndexChanged="PickerMes_SelectedIndexChanged" TitleColor="White" x:Name="PickerMes" TextColor="White" Title="Seleccione el mes">
                                <Picker.Items>
                                    <x:String>ENERO</x:String>
                                    <x:String>FEBRERO</x:String>
                                    <x:String>MARZO</x:String>
                                    <x:String>ABRIL</x:String>
                                    <x:String>MAYO</x:String>
                                    <x:String>JUNIO</x:String>
                                    <x:String>JULIO</x:String>
                                    <x:String>AGOSTO</x:String>
                                    <x:String>SEPTIEMBRE</x:String>
                                    <x:String>OCTUBRE</x:String>
                                    <x:String>NOVIEMBRE</x:String>
                                    <x:String>DICIEMBRE</x:String>
                                </Picker.Items>
                            </Picker>

                        </Frame>


                        <Frame CornerRadius="8" Padding="0" BackgroundColor="#171717">
                            <customcontrol:CustomEntry FontSize="17"  Placeholder="Gastos" Keyboard="Numeric" TextColor="White" PlaceholderColor="White" HorizontalOptions="FillAndExpand" 
                                                       TextTransform="None" x:Name="TxtGastos"  Margin="5" />
                        </Frame>

                        <Frame CornerRadius="8" Padding="0" BackgroundColor="#171717">
                            <customcontrol:CustomEntry  FontSize="17"  Placeholder="Descripcion" HeightRequest="80" TextColor="White" PlaceholderColor="White" 
                                                        HorizontalOptions="FillAndExpand" TextTransform="None" x:Name="TxtDescripcion"  Margin="5" />
                        </Frame>

                        <Button Margin="0,10,0,0" Text="Guardar Gastos"
                        x:Name="BtnGastos" Clicked="BtnGastos_Clicked"
                        BackgroundColor="#00FE79"
                        TextColor="#000000" />



                        <Label Text="Por favor describa los ingresos que ha tenido en el mes actual" TextColor="#CEE7EA" FontSize="16" Padding="0,0,0,0"/>

                        <Frame BackgroundColor="#171717" Padding="0" CornerRadius="8">

                            <Picker IsEnabled="True" Margin="5" FontSize="17" HorizontalOptions="FillAndExpand" SelectedIndexChanged="PickerMes2_SelectedIndexChanged" TitleColor="White" x:Name="PickerMes2" TextColor="White" Title="Seleccione el mes">
                                <Picker.Items>
                                    <x:String>ENERO</x:String>
                                    <x:String>FEBRERO</x:String>
                                    <x:String>MARZO</x:String>
                                    <x:String>ABRIL</x:String>
                                    <x:String>MAYO</x:String>
                                    <x:String>JUNIO</x:String>
                                    <x:String>JULIO</x:String>
                                    <x:String>AGOSTO</x:String>
                                    <x:String>SEPTIEMBRE</x:String>
                                    <x:String>OCTUBRE</x:String>
                                    <x:String>NOVIEMBRE</x:String>
                                    <x:String>DICIEMBRE</x:String>
                                </Picker.Items>
                            </Picker>

                        </Frame>
                        <Frame CornerRadius="8" Padding="0" BackgroundColor="#171717">
                            <customcontrol:CustomEntry FontSize="17"  Placeholder="Gastos" Keyboard="Numeric" TextColor="White" PlaceholderColor="White" HorizontalOptions="FillAndExpand" TextTransform="None" x:Name="TxtGastos2"  Margin="5" />
                        </Frame>

                        <Frame CornerRadius="8" Padding="0" BackgroundColor="#171717">
                            <customcontrol:CustomEntry  FontSize="17"  Placeholder="Descripcion" HeightRequest="80" TextColor="White" PlaceholderColor="White" HorizontalOptions="FillAndExpand" TextTransform="None" x:Name="TxtDescripcion2"  Margin="5" />
                        </Frame>

                        <Button Margin="0,10,0,0" Text="Guardar Ingresos"
                        x:Name="BtnIngresos"
                        Clicked="BtnIngresos_Clicked"
                        BackgroundColor="#00FE79"
                        TextColor="#000000" />


                    </StackLayout>


                </ScrollView>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>